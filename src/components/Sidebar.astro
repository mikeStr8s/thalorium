---
import Navbar from "./Navbar.astro";
import RecentArticles from "./RecentArticles.astro";
---

<div id="sidebar" class="inactive">
    <div class="inner">
        <Navbar />
        <RecentArticles />
        <a href="#sidebar" class="toggle inactive">&#9776</a>
    </div>
</div>

<style lang="scss">
    /* Default: Small devices such as large phones (less than 768px) */
    #sidebar {
        position: fixed;
        top: 0;
        width: 300px;
        height: 100%;
        z-index: 10000;

        .inner {
            position: absolute;
            top: 0;
            left: 0;
            overflow-x: hidden;
            overflow-y: auto;
            height: 100%;
            padding: 10px;
            background-color: var(--theme-surface-10);
        }
    }

    .toggle {
        position: fixed;
        top: 0;
        left: 300px;
        width: 2.5em;
        height: 1.5em;
        border-radius: 3px;
        margin-left: 10px;
        margin-top: 10px;

        background-color: var(--theme-surface-50);
        color: var(--theme-text-secondary);
        text-decoration: none;
        text-align: center;
        font-size: large;
        opacity: 50%;
    }

    /* Medium devices such as tablets (768px and up) */
	@media only screen and (min-width: 768px) {
	}

	/* Large devices such as laptops (1024px and up) */
	@media only screen and (min-width: 1024px) {
        #sidebar {
            position: relative;
            min-width: 300px;
            

            .inner {
                position: relative;
            }
        }

        #sidebar.inactive {
            left: 0;
        }

        .toggle {
            visibility: hidden;
        }
	}
</style>
