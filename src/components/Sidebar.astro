---
import Navbar from "./Navbar.astro";
import RecentArticles from "./RecentArticles.astro";
---

<div id="sidebar">
    <div class="inner">
        <Navbar />
        <RecentArticles />
    </div>
</div>

<style lang="scss">
    #sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: 300px;
        height: 100%;
        box-shadow: 0 0 50px 0 rgba(0,0,0, 0.3);

        .inner {
            position: absolute;
            top: 0;
            left: 0;
            overflow-x: hidden;
            overflow-y: auto;
            height: 100%;
        }
    }
</style>
